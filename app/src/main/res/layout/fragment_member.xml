<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightest_blue"
        tools:context=".ui.MemberFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/member_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="@color/yellowish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/member_image"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="210dp"
                android:layout_height="300dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/member_name"
                android:layout_marginTop="330dp"
                android:layout_gravity="center_horizontal"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/reddish"
                android:text="" />

            <TextView
                android:id="@+id/member_pn"
                android:layout_marginTop="420dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="" />

            <TextView
                android:id="@+id/member_sn"
                android:layout_marginTop="450dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="" />

            <TextView
                android:id="@+id/member_minister"
                android:layout_marginTop="480dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="" />

            <TextView
                android:id="@+id/member_cons"
                android:layout_marginTop="510dp"
                android:layout_marginStart="30dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="" />
        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>